{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
    "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
    "window_hiding_behaviour": "Cloak",
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 2,
    "default_container_padding": 1,
    "transparency": true,
    "transparency_alpha": 250,
    "border": true,
    "border_width": 4,
    "border_offset": 0,
    "border_style": "System",
    "border_colours": {
        "single": "#36b1c1",
        "stack": "#81a598",
        "monocle": "#6b3637",
        "unfocused": "#767b7a"
    },
    "animation": {
        "enabled": false,
        "fps": 144,
        "style": "EaseInSine" 
    },
    "stackbar": {
        "height": 20,
        "mode": "Never",
        "tabs": {
            "width": 300,
            "focused_text": "#36b1c1",
            "unfocused_text": "#6b3637",
            "background": "#767b7a"
        }
    },
    "monitors": [
        {
            "display_index": 0,
            "workspaces": [
                {
                    "name": "I",
                    "layout": "Columns"
                },
                {
                    "name": "II",
                    "layout": "Columns"
                },
                {
                    "name": "III",
                    "layout": "Columns"
                },
                {
                    "name": "IV",
                    "layout": "Columns"
                },
                {
                    "name": "V",
                    "layout": "Columns"
                },
                {
                    "name": "VI",
                    "layout": "Columns"
                },
                {
                    "name": "VII",
                    "layout": "Columns"
                }
            ]
        },
          {
            "display_index": 1,
            "workspaces": [
                {
                    "name": "I",
                    "layout": "Rows"
                },
                {
                    "name": "II",
                    "layout": "Rows"
                },
                {
                    "name": "III",
                    "layout": "Rows"
                },
                {
                    "name": "IV",
                    "layout": "Rows"
                },
                {
                    "name": "V",
                    "layout": "Rows"
                },
                {
                    "name": "VI",
                    "layout": "Rows"
                },
                {
                    "name": "VII",
                    "layout": "Rows"
                }
            ]
        }
    ]
}
